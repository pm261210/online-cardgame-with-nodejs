<%- include('partials/header', { isLoginPage: true }) %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center">Login</h2>
          <form action="/users/login" method="POST" class="mt-4">
            <div class="mb-3">
              <label class="form-label">Usuário</label>
              <input class="form-control" type="text" name="username" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Senha</label>
              <div class="input-group">
                <input class="form-control" type="password" name="password" id="password" required />
                <button type="button" class="btn btn-outline-secondary" id="togglePassword">Mostrar</button>
              </div>
            </div>
            <div class="d-grid">
              <button class="btn btn-success" type="submit">Entrar</button>
            </div>
          </form>
          <% if (message) { %>
            <div class="alert alert-danger mt-3"><%= message %></div>
          <% } %>
          <p class="mt-3 text-center">Não tem conta? <a href="/register">Cadastre-se</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

<script>
  const passwordInput = document.getElementById('password');
  const toggleButton = document.getElementById('togglePassword');
  if (toggleButton && passwordInput) {
    toggleButton.addEventListener('click', () => {
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleButton.textContent = 'Ocultar';
      } else {
        passwordInput.type = 'password';
        toggleButton.textContent = 'Mostrar';
      }
    });
  }
</script>
